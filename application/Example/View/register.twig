{% extends 'base.twig' %}

{% block title %}Регистрация нового пользователя{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="span12">
                <h3>Регистрация нового пользователя</h3>

                <form action="{{ base_url }}/examples/register/" method="post" accept-charset="utf-8"
                      class="form-horizontal">
                    {% for field in form.fields %}
                        {% if field.error %}
                            <div class="alert alert-block alert-error">{{ field.error }}</div>
                        {% endif %}
                        <div class="control-group">
                            <label class="control-label">{{ field.label }}</label>

                            <div class="controls">
                                {{ field.html|raw }}
                            </div>
                        </div>
                    {% endfor %}

                    <div class="control-group">
                        <div class="controls">
                            <button class="btn">Отправить</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}